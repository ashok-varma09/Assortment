
#include <stdio.h>

int main()
{ 
    int size;
    printf("Enter size of an array :");
    scanf("%d",&size);
    int a[size];
    //take the lements of an array
        for (int i=0;i<size;i++)
        {
            printf("a[%d]= ",i);
            scanf("%d",&a[i]);
        }
        printf("Negative numbers are : ");
        // Finding nrgative numbers 
        for (int i=0;i<size;i++)
        {
            if (a[i]<0)
            {
                printf("%d",a[i]);
            }
        }
    return 0;
}
